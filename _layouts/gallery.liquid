---
layout: page
---

<style>
.img-fixed-height {
  height: 300px;
  object-fit: cover;
}
.gallery-row {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20px;
}
.gallery-item {
  flex: 0 0 50%;
  padding: 10px;
  box-sizing: border-box;
  align-items:center;
  display:flex;
  justify-content:center;
  flex-direction:column;
}
</style>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    {% for item in page.gallery %}
      <li data-target="#carouselExampleIndicators" data-slide-to="{{ forloop.index0 }}" class="{% if forloop.first %}active{% endif %}"></li>
    {% endfor %}
  </ol>
  <div class="carousel-inner">
    {% for item in page.gallery %}
      <div class="carousel-item {% if forloop.first %}active{% endif %}">
        {% assign gallery_image_path = item.src | prepend: '../assets/img/gallery/' %}
        <img class="d-block w-100" src="{{ gallery_image_path }}" alt="{{ item.alt | default: 'Gallery Image' }}">
        {% if item.caption %}
          <div class="carousel-caption d-none d-md-block" style="margin-top:80vh">
            <h5 style="color:#b509ac; font-weight:bold; font-size:50px">{{ item.caption | default: '...' }}</h5>
          </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

